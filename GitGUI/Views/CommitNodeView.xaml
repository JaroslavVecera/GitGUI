<UserControl x:Class="GitGUI.CommitNodeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GitGUI"
             mc:Ignorable="d" 
             Height="40"
             d:DesignHeight="450" d:DesignWidth="800"
             Cursor="Hand">
    <Grid Margin="{Binding GridMargin}"
          Style="{DynamicResource ResourceKey=CommitStyle}"
          Height="40">
        <Path x:Name="Path" VerticalAlignment="Top">
            <Path.Data>
                <PathGeometry Figures="{Binding OutlineSegments}"></PathGeometry>
            </Path.Data>
        </Path>
        <TextBlock  TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Left" TextWrapping="WrapWithOverflow" TextTrimming="CharacterEllipsis" x:Name="TextBlock"></TextBlock>
        <Ellipse Height="40" Width="40" HorizontalAlignment="Left" Margin="{Binding EllipseMargin}" IsEnabled="{Binding EnabledPhoto}">
            <Ellipse.LayoutTransform>
                <ScaleTransform ScaleX="0.9" ScaleY="0.9"></ScaleTransform>
            </Ellipse.LayoutTransform>
            <Ellipse.Fill>
                <ImageBrush ImageSource="{Binding Path, TargetNullValue={x:Null}}"/>
            </Ellipse.Fill>
        </Ellipse>
    </Grid>
</UserControl>
