<UserControl x:Class="GitGUI.MainTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:local="clr-namespace:GitGUI"
             xmlns:logic="clr-namespace:GitGUI.Logic"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>
        <ScrollViewer  Grid.Row="0" Cursor="SizeAll" x:Name="graphView"
                       VerticalScrollBarVisibility="Disabled"
                       Margin="5,5,5,0" VerticalAlignment="Stretch"
                       Content="{Binding Path=ZoomAndPanCanvas}"
                       DataContextChanged="OnDataContextChanged"
                       Focusable="False"
                       MouseUp="OnMouseUp"
                       MouseDown="OnMouseDown">
        </ScrollViewer>
        <ContentControl Content="{Binding Path=ActionPanel}" Grid.Row="1">
            <ContentControl.ContentTemplate>
                <DataTemplate>
                    <local:ActionPanelView></local:ActionPanelView>
                </DataTemplate>
            </ContentControl.ContentTemplate>
        </ContentControl>
        </Grid>
        <ContentControl Content="{Binding Shown}" Grid.Row="2" VerticalAlignment="Stretch" x:Name="nodePanel">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type logic:CommitNodeModel}">
                    <local:CommitInfoView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type logic:BranchLabelModel}">
                    <TextBlock Text="Zatim nic"/>
                </DataTemplate>
            </ContentControl.Resources>
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsInfoVisible}" Value="true">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>
    </Grid>
</UserControl>
