<UserControl x:Class="GitGUI.BranchLabelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GitGUI"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="180">
    <Grid>
        <Border VerticalAlignment="Top" CornerRadius="2" Height="40" Background="#003a8c" MaxWidth="150">
            <TextBlock Text="{Binding Name}"
                   TextTrimming="CharacterEllipsis" 
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Padding="10,0,10,0" Foreground="White">
                <TextBlock.ToolTip>
                    <AccessText Text="{Binding Name}"/>
                </TextBlock.ToolTip>
            </TextBlock>
        </Border>
        <Path Fill="#003a8c">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="30,40">
                        <PathFigure.Segments>
                            <LineSegment Point="40,55" />
                            <LineSegment Point="50,40" />
                        </PathFigure.Segments>
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>
    </Grid>
</UserControl>
