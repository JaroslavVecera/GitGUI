<UserControl x:Class="GitGUI.BranchNode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GitGUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Cursor="Hand"
             Height="40">
    <Grid Margin="{Binding GridMargin}" Height="40" Style="{DynamicResource ResourceKey=BranchStyle}">
        <Path  x:Name="Path" Data="{Binding Geometry}">
        </Path>
        <TextBlock x:Name="TextBlock" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" ></TextBlock>
    </Grid>
</UserControl>
