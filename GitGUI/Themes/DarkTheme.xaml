<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:GitGUI">
    <Style TargetType="ScrollViewer">
        <Setter Property="Background" Value="#034748"></Setter>
    </Style>
    <Style TargetType="local:MainWindow">
        <Setter Property="Background" Value="#001021"></Setter>
    </Style>
    <Style x:Key="CommitStyle">
        <Style.Resources>
            <Style TargetType="Path">
                <Setter Property="Fill" Value="#1481BA"></Setter>
            </Style>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="White"></Setter>
            </Style>
        </Style.Resources>
    </Style>
    <Style x:Key="BranchStyle">
        <Style.Resources>
            <Style TargetType="Path">
                <Setter Property="Fill" Value="#11B5E4"></Setter>
            </Style>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="White"></Setter>
            </Style>
        </Style.Resources>
    </Style>
</ResourceDictionary>