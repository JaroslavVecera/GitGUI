<Window      x:Class="GitGUI.InputDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GitGUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Width="400"
             Background="#28282A"
             WindowStartupLocation="CenterOwner"
             Height="200">
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Foreground="White" Text="Enter name of new branch" />
            <TextBox TextChanged="TextChanged" Background="#3E3E42" FontSize="15" Foreground="White" Grid.Row="1" Margin="15" x:Name="ResponseTextBox" />
            <Button Grid.Row="2" Height="30" Width="100" Content="OK" x:Name="button" />
        </Grid>
    </Window>
